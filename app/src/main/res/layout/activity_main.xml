<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorPrimary"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textSize="48sp"
        tools:text="2+2"
        android:maxLength="14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            style="@style/ButtonStyle"
            android:text="C" />

        <Button
            style="@style/ButtonStyle"
            android:text="+/-" />

        <Button
            style="@style/ButtonStyle"
            android:text="%" />

        <Button
            style="@style/ButtonStyle"
            android:background="@drawable/side_button_background"
            android:text="/" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            style="@style/ButtonStyle"
            android:text="7" />

        <Button
            style="@style/ButtonStyle"
            android:text="8" />

        <Button
            style="@style/ButtonStyle"
            android:text="9" />

        <Button
            style="@style/ButtonStyle"
            android:background="@drawable/side_button_background"
            android:text="+" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            style="@style/ButtonStyle"
            android:text="4" />

        <Button
            style="@style/ButtonStyle"
            android:text="5" />

        <Button
            style="@style/ButtonStyle"
            android:text="6" />

        <Button
            style="@style/ButtonStyle"
            android:background="@drawable/side_button_background"
            android:text="-" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            style="@style/ButtonStyle"
            android:text="1" />

        <Button
            style="@style/ButtonStyle"
            android:text="2" />

        <Button
            style="@style/ButtonStyle"
            android:text="3" />

        <Button
            style="@style/ButtonStyle"
            android:background="@drawable/side_button_background"
            android:text="*" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            style="@style/ButtonStyle"
            android:layout_weight="2"
            android:text="0" />

        <Button
            style="@style/ButtonStyle"
            android:text="." />

        <Button
            style="@style/ButtonStyle"
            android:background="@drawable/equal_button_background"
            android:text="=" />


    </LinearLayout>


</LinearLayout>